Algoritmo "ÁreadeUmTriângulo"

Var

   altura:inteiro
   base:inteiro
   area:real


Inicio

      escreval("Digite a altura do triãngulo: ")
      leia(altura)
      escreval("Digite a base do triângulo: ")
      leia(base)
 
      area <-  (base * altura)/2
 
      escreval("A área do triângulo com a altura ",altura,"e a base ",base," é: ",area)


Fimalgoritmo